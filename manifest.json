{
    "manifest_version": 3,
    "name": "Wordle Emoji Copier",
    "version": "1.0",
    "description": "Copies the Wordle result as Emojis for sharing.",
    "permissions": [
        "clipboardWrite"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.nytimes.com/games/wordle/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "38": "icon38.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "homepage_url": "https://github.com/GlennAtCallinetic/wordle-emoji-copier"
}